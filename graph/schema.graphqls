# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Post {
  id: ID!
  published: Boolean!
  title: String!
  text: String!
  attachments: Attachments
  tags: [Tags]
}

scalar Attachments

enum Tags {
  Coding
  System Architecture
  Book
}


#
# Reads
#
type Query {
  posts: [Post!]!
}


#
# Writes
#
input NewPost {
  published: Boolean! = false
  title: String!
  text: String!
  attachments: Attachments
  tags: [Tags]
}

type Mutation {
  createPost(input: NewPost!): Post!
}

type Mutation {
  attach(files: [Attachments!]): String!
}
